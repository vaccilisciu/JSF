<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">

	<managed-bean>
        <!-- nome di riferimento del bean -->
        <managed-bean-name>helloWorldBean</managed-bean-name>
        <!-- package del mio bean -->
        <managed-bean-class>scai.formazione.bean.HelloWorldBean</managed-bean-class>
        <!-- scope del mio bean -->
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <!-- nome di riferimento del bean -->
        <managed-bean-name>controllerBean</managed-bean-name>
        <!-- package del mio bean -->
        <managed-bean-class>scai.formazione.bean.Controller</managed-bean-class>
        <!-- scope del mio bean -->
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

</faces-config>
